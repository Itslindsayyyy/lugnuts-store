<h1 class="mb-4"><%= @category.name %></h1>

<% if @products.any? %>
  <div class="row g-4">
    <% @products.each do |product| %>
      <div class="col-6 col-md-4 col-lg-3">
        <%= render partial: "products/product", locals: { product: product } %>
      </div>
    <% end %>
  </div>

  <div class="mt-4">
    <%= paginate @products %>
  </div>
<% else %>
  <p>No products found in this category.</p>
<% end %>
