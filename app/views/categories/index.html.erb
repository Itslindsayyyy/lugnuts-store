<h1 class="mb-4">Categories</h1>

<!-- Categories -->
<div class="row g-4 mb-5">
  <% @categories.each do |category| %>
    <div class="col-6 col-md-3">
      <%= link_to category.name, category_path(category), class: "category-tile d-block text-center py-4 px-2" %>
    </div>
  <% end %>
</div>

<!-- Products -->
<h2 class="mb-4">All Products</h2>
<div class="row g-4">
  <% @products.each do |product| %>
    <div class="col-6 col-md-4 col-lg-3">
      <div class="product-card border rounded p-3 h-100 d-flex flex-column">
        <%= image_tag(product.image_url, class: "img-fluid mb-2", alt: product.name) if product.image_url.present? %>
        <h6 class="fw-bold"><%= product.name %></h6>
        <p class="text-muted small mb-1">$<%= number_with_precision(product.price, precision: 2) %></p>
        <%= link_to "View", product_path(product), class: "btn btn-outline-primary btn-sm mt-auto" %>
      </div>
    </div>
  <% end %>
</div>

<!-- Pagination (moved outside the loop) -->
<div class="mt-4">
  <%= paginate @products %>
</div>
