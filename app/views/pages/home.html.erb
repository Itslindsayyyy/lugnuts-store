<!-- Hero Image (full width) -->
<div class="container-fluid p-0">
  <img src="/hero_1.png" alt="Staff helping customer" class="img-fluid w-100">
</div>


<!-- Section Nav Row (full width) -->
<div class="container-fluid p-0 my-4">
  <div class="py-2 px-4 border-top border-bottom border-3 custom-border-color">
    <div class="d-flex gap-4">
      <a href="#shop" class="section-link">Shop by Category</a>
      <a href="#resources" class="section-link">Resources & Support</a>
    </div>
  </div>
</div>


<!-- Featured Tiles Section -->
<div class="container my-5">
  <div class="row g-4">
    <!-- Tile 1: Best Sellers -->
    <div class="col-6 col-md-4">
      <% if (tag = Tag.find_by(name: 'Best Sellers')) %>
        <%= link_to tag_path(tag), class: "tile-box tile-feature text-white d-flex flex-column justify-content-between text-center h-100 p-4 text-decoration-none" do %>
          <div class="mb-2"><i class="bi bi-star-fill fs-2"></i></div>
          <h5 class="fw-bold text-uppercase mb-3">Best Sellers</h5>
          <span class="btn btn-outline-light btn-sm rounded-pill px-3">Shop Now</span>
        <% end %>
      <% end %>
  
    </div>
  
    <!-- Tile 2: New Arrivals -->
    <div class="col-6 col-md-4">
      <%= link_to tag_path(Tag.find_by(name: 'New Arrivals')), class: "tile-box tile-feature text-white d-flex flex-column justify-content-between text-center h-100 p-4 text-decoration-none" do %>
        <div class="mb-2"><i class="bi bi-box-fill fs-2"></i></div>
        <h5 class="fw-bold text-uppercase mb-3">New Arrivals</h5>
        <span class="btn btn-outline-light btn-sm rounded-pill px-3">Shop Now</span>
      <% end %>
    </div>

    <!-- Tile 3: Sales & Promotions -->
    <div class="col-12 col-md-4">
      <%= link_to tag_path(Tag.find_by(name: 'Discounts')), class: "tile-box tile-feature text-white d-flex flex-column justify-content-between text-center h-100 p-4 text-decoration-none" do %>
        <div class="mb-2"><i class="bi bi-tags-fill fs-2"></i></div>
        <h5 class="fw-bold text-uppercase mb-3">Sales & Promotions</h5>
        <span class="btn btn-outline-light btn-sm rounded-pill px-3">Save Now</span>
      <% end %>
    </div>

    <!-- Tile 4: Mission -->
    <div class="col-12 col-md-8">
      <div class="tile-box tile-mission-container p-0 overflow-hidden position-relative">
        <img src="/mission1.jpg" alt="Mission Image" class="w-100 h-100 object-fit-cover">
    
        <div class="tile-mission-overlay bg-white text-center p-4 position-absolute bottom-0 w-100">
          <p>We're a local, family-run parts supplier focused on great customer service, fast shipping, and reliable automotive products — for DIYers and pros alike.</p>
          <%= link_to "Learn More", "/about/history", class: "btn btn-outline-dark btn-sm rounded-pill px-3" %>
        </div>
      </div>
    </div>
    
  
  
    
    <!-- Tile 5: Featured Review (1/3 width) -->
    <div class="col-12 col-md-4">
      <div class="tile-box text-center d-flex flex-column justify-content-center align-items-center h-100 p-4 tile-highlight">
        <blockquote class="mb-0 fst-italic">
          “Great prices, fast shipping, and super friendly staff. Lugnuts is my go-to for parts!”
          <footer class="blockquote-footer mt-2 text-muted">John Doe</footer>
        </blockquote>
      </div>
    </div>
    

<!-- Shop by Category Section -->
<div class="container my-5">
  <h2 class="fw-bold text-center mb-4">Shop by Category</h2>
  <div class="row g-3">

    <% Category.all.each do |category| %>
      <div class="col-6 col-md-3">
        <%= link_to category_path(category), class: "category-tile category-blue d-block text-center py-4 px-2" do %>
          <h6 class="text-uppercase fw-semibold mb-0"><%= category.name %></h6>
        <% end %>
      </div>
    <% end %>

    <!-- Shop All Categories Tile -->
    <div class="col-6 col-md-3">
      <%= link_to categories_path, class: "category-tile d-block text-center py-4 px-2 bg-dark text-white" do %>
        <h6 class="text-uppercase fw-semibold mb-0">Shop All Categories</h6>
      <% end %>
    </div>

  </div>
</div>
