<h2>Edit Profile</h2>

<% if resource.errors.any? %>
  <div class="alert alert-danger">
    <h4>There were some errors:</h4>
    <ul>
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <div class="row g-3">

    <!-- Name -->
    <div class="col-md-6">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, class: "form-control" %>
    </div>

    <div class="col-md-6">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, class: "form-control" %>
    </div>

    <!-- Email + Phone -->
    <div class="col-md-12">
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>
    </div>

    <div class="col-md-12">
      <%= f.label :phone %>
      <%= f.telephone_field :phone, class: "form-control" %>
    </div>

    <!-- Address Section -->
    <div class="col-12">
      <h4 class="mt-4">Mailing Address</h4>
    </div>

    <div class="col-md-12">
      <%= f.label :street, "Street Address" %>
      <%= f.text_field :street, id: "street", class: "form-control" %>
    </div>
    
    <div class="col-md-4">
      <%= f.label :city %>
      <%= f.text_field :city, id: "city", class: "form-control" %>
    </div>
    
    <div class="col-md-4">
      <%= f.label :state %>
      <%= f.text_field :state, id: "state", class: "form-control" %>
    </div>
    
    <div class="col-md-4">
      <%= f.label :zip, "ZIP Code" %>
      <%= f.text_field :zip, id: "zip", class: "form-control" %>
    </div>

  <div class="mt-4">
    <%= f.submit "Update Profile", class: "btn btn-primary" %>
  </div>
<% end %>

<h3 class="mt-5">Cancel My Account</h3>
<div>
  Unhappy?
  <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %>
</div>

<%= link_to "Back", root_path, class: "btn btn-link mt-3" %>